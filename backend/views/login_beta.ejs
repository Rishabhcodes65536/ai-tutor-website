<%- include('./partials/login_header.ejs') %>

<%- include('./partials/beta_navbar.ejs') %>
<style>
  .welcome-message {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  .beta_container{
    margin-top: 50px;
  }
  .welcome-message h2 {
    color: #333;
    font-size: 24px;
    margin-bottom: 15px;
  }

  .welcome-message p {
    color: #666;
    font-size: 16px;
    margin-bottom: 10px;
  }

  .welcome-message ul {
    margin-bottom: 15px;
    padding-left: 20px;
  }

  .welcome-message ul li {
    color: #666;
    font-size: 16px;
    list-style-type: disc;
  }

  .welcome-message img {
    margin-top: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .form-outline {
    margin-bottom: 20px;
  }

  .text-center {
    margin-top: 20px;
  }
</style>
</header>
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center h-100 beta_container">
      <!-- Left Column with Welcome Message -->
      <div class="col-md-9 col-lg-6 col-xl-5">
        <div class="welcome-message">
          <h2>Welcome to Knolly's Beta Test!</h2>
          <p>We're excited to invite you to participate in the beta test of our brand new AI-powered learning platform designed to help you master your studies.</p>
          <ul>
            <li>Interactive quizzes to test your understanding</li>
            <li>Step-by-step guidance to solve problems effectively</li>
            <li>An intelligent AI tutor to answer your questions</li>
          </ul>
          <p>Ready to join the adventure?</p>
          <img src="/assets/img/LoginPage.svg" class="img-fluid" alt="Sample image">
        </div>
      </div>
      <!-- Right Column with Form -->
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form method="post">
          <!-- Email input -->
          <div data-mdb-input-init class="form-outline mb-4">
            <label class="form-label" for="form3Example3">Email address</label>
            <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="Enter a valid email address" required />
          </div>

          <!-- Password input -->
          <div data-mdb-input-init class="form-outline mb-3">
            <label class="form-label" for="form3Example4">Password</label>
            <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Enter password" required />
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
              <label class="form-check-label" for="form2Example3">
                Remember me
              </label>
            </div>
            <a href="#!" class="text-body">Forgot password?</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/register" class="link-danger">Register</a></p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Preloader -->
  <div id="preloader"></div>


<%- include('./partials/footer.ejs') %>