<!-- views/topic.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Topic</title>
</head>
<body>
    <h1>Select a Topic</h1>
    <ul>
        <% topics.forEach(topic => { %>
            <li><a href="/answer?topic=<%= topic.name %>"><%= topic.name %></a></li>
        <% }); %>
    </ul>
</body>
</html>
